{
	"name": "syntaxia-blog",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"start": "concurrently -p \"[{name}]\" -n \"CLIENT\" -c \"bgBlue.bold\" vite",
		"build": "concurrently -p \"[{name}]\" -n \"CLIENT\" -c \"bgBlue.bold\" vite run build",
		"lint": "concurrently -p \"[{name}]\" -n \"CLIENT\" -c \"bgBlue.bold\" eslint .",
		"preview": "concurrently -p \"[{name}]\" -n \"CLIENT\" -c \"bgBlue.bold\" vite preview --host --port 3000",
		"client": "vite --host",
		"dev": "concurrently -p \"[{name}]\" -n \"CLIENT,SERVER,TW-CSS\" -c \"bgBlue.bold,bgGreen.bold,bgYellow.bold\"  \"yarn run client\" \"yarn --cwd server/ server\" \"tailwindcss --watch -o style.css \""
	},
	"dependencies": {
		"@emotion/css": "^11.13.0",
		"@reduxjs/toolkit": "^2.2.7",
		"autoprefixer": "^10.4.20",
		"axios": "^1.7.4",
		"concurrently": "^9.0.1",
		"lucide-react": "^0.436.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-markdown": "^9.0.1",
		"react-redux": "^9.1.2",
		"react-router-dom": "^6.26.0",
		"styled-components": "^6.1.13"
	},
	"devDependencies": {
		"@eslint/js": "^9.8.0",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"daisyui": "^4.12.10",
		"eslint": "^9.8.0",
		"eslint-plugin-react": "^7.35.0",
		"eslint-plugin-react-hooks": "^5.1.0-rc.0",
		"eslint-plugin-react-refresh": "^0.4.9",
		"globals": "^15.9.0",
		"tailwindcss": "^3.4.9",
		"vite": "^5.4.0"
	},
	"packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
